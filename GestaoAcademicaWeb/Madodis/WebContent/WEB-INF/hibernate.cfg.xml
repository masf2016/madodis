<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    	<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/docente</property>
    	<property name="hibernate.connection.pool_size">20</property>
    	<property name="show_sql">true</property>
    	<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    	<property name="hibernate.current_session_context_class">thread</property>
    	<property name="hibernate.hbm2ddl.auto">update</property>
    	
    	<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Endereco"/>
		<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Telefone"/>
		<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Instituicao"/>
		<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Docente"/>
		<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Aluno"/>
		<mapping class="br.edu.facol.gestaoacademicaweb.pojo.Curso"/>				    
	</session-factory>
</hibernate-configuration>	